<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    app:cardBackgroundColor="@color/cardview_light_background"
    card_view:cardCornerRadius="4dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<TextView
    android:id="@+id/title_tv"
    android:textSize="16sp"
    android:text="黄金期货投机性净多头头寸创历史新高，黄金股或迎来交易机会，龙头就买这几只"
    android:layout_width="match_parent"
    android:layout_height="50dp" />
    <TextView
        android:id="@+id/summary_tv"
        android:text="今日重要性：✨✨"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="20dp" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/stock1_iv"
            android:src="@mipmap/ic_stock_down"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/name1_tv"
            android:text="湖南黄金"
            android:layout_weight="1"
            android:textSize="12sp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/symbol1_tv"
            android:text="-6.62%"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <ImageView
            android:id="@+id/stock2_iv"
            android:src="@mipmap/ic_stock_down"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/name2_tv"
            android:text="湖南黄金"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/symbol2_tv"
            android:text="-6.62%"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <ImageView
            android:id="@+id/stock3_iv"
            android:src="@mipmap/ic_stock_down"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/name3_tv"
            android:text="湖南黄金"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/symbol3_tv"
            android:text="-6.62%"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_teal_300"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="20dp">
        <ImageView
            android:id="@+id/share_iv"
            android:src="@mipmap/ic_share"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/collection_iv"
            android:layout_toRightOf="@+id/share_iv"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/ic_collection"
            android:layout_width="20dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/collectionNum_tv"
            android:layout_toRightOf="@+id/collection_iv"
            android:layout_marginLeft="10dp"
            android:text="5"
            android:src="@mipmap/ic_stock_down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/time_tv"
            android:text="08:08"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/source_tv"
            android:text="来自：选股宝"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>